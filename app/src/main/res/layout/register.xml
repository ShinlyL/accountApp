<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <TableRow
        android:gravity="center"
        android:layout_marginTop="120dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/reg_iv_head"
            android:layout_width="80dp"
            android:layout_height="60dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/grey"
            android:background="@null"
            android:src="@drawable/drg"/>
    </TableRow>
    <TableRow
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/grey"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/nickname_img"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="昵 称"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/rg_et_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </TableRow>
    <TableRow
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/grey"
            android:layout_marginLeft="50dp"

            android:layout_marginTop="5dp"
            android:src="@drawable/account_img"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="账 号"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/rg_et_account"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </TableRow>
    <TableRow
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/grey"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/password_img"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="密 码"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/rg_et_password"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>
    </TableRow>
    <TableRow
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/grey"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/password_img"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="确认密码"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/rg_et_repd"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>
    </TableRow>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/rg_btn1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="20sp"
            android:background="@drawable/button"/>
        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/rg_btn2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textSize="20sp"
            android:background="@drawable/button"/>
    </LinearLayout>
</TableLayout>