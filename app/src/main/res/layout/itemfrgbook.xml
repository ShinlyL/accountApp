<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/itemfrgbook_iv_kind"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/lightblue"
        android:src="@drawable/p01"
        android:background="@null"/>
    <TextView
        android:id="@+id/itemfrgbook_tv_detail"
        android:layout_toRightOf="@+id/itemfrgbook_iv_kind"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="记账的详细信息"
        android:textSize="18sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:layout_height="1dp"
        android:layout_toRightOf="@id/itemfrgbook_iv_kind"
        android:layout_below="@id/itemfrgbook_tv_detail"
        android:background="@color/grey"
        />
    <TextView
        android:id="@+id/itemfrgbook_tv_date"
        android:layout_below="@+id/itemfrgbook_tv_detail"
        android:layout_toRightOf="@id/itemfrgbook_iv_kind"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="2020年11月01日17:18:58"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/itemfrgbook_tv_money"
        android:layout_toRightOf="@id/itemfrgbook_tv_date"
        android:layout_below="@id/itemfrgbook_tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_alignRight="@id/itemfrgbook_tv_detail"
        android:gravity="right"
        android:text="支出：0元"
        android:textSize="14sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:layout_height="3dp"
        android:layout_below="@+id/itemfrgbook_tv_date"
        android:background="@color/white"
        />
</RelativeLayout>